{
  "defaultSeverity": "warning",
  "rulesDirectory": ["node_modules/codelyzer"],
  "linterOptions": {
    "exclude": ["node_modules/**", "src_lib/**", "projects/af-ngxs/**", "projects/ngxs/**"]
  },
  "rules": {
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "call-signature": true,
    "arrow-call-signature": false,
    "parameter": true,
    "property-declaration": true,
    "variable-declaration": false,
    "member-variable-declaration": true,
    "object-destructuring": true,
    "array-destructuring": true,
    "arrow-parameter": false,
    "no-empty-interface": false,
    "prefer-template": [true, "allow-single-concat"],
    "prefer-while": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "function-constructor": true,

    "comment-format": [true, "check-space"],
    "curly": [true, "ignore-same-line"],
    "deprecation": {
      "severity": "warn"
    },
    "eofline": true,
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "import-spacing": true,
    "indent": [true, "spaces"],
    "interface-over-type-literal": true,
    "label-position": true,
    "max-line-length": [true, 140],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": ["static-field", "instance-field", "static-method", "instance-method"]
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-eval": true,
    "no-inferrable-types": false,
    "no-misused-new": true,
    "no-non-null-assertion": false,
    "no-redundant-jsdoc": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-parameter-reassignment": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-internal-module": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-unused-variable": true,
    "cyclomatic-complexity": true,
    "object-literal-sort-keys": false,
    "prefer-for-of": true,
    "no-reference": true,
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "prefer-const": true,
    "quotemark": [true, "single"],
    "radix": true,
    "semicolon": [true, "always"],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ],
    "triple-equals": [true, "allow-null-check"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "variable-name": false,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
    "directive-selector": [true, "attribute", "app", "af", "kebab-case"],
    "component-selector": [true, ["element", "attribute"], ["af", "app"], "kebab-case"],
    "no-output-on-prefix": true,
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": false,
    "directive-class-suffix": true,
    "no-default-export": true,
    "no-duplicate-imports": true,
    "binary-expression-operand-order": true,
    "increment-d√©rement": true,
    "interface-name": [true, "always-prefix"],
    "no-boolean-literal-compare": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-qualifier": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-switch": true,
    "return-undefined": true,
    "switch-final-break": true,
    "unnecessary-bind": true,
    "await-promise": true,
    "no-conditional-assignment": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
    "no-floating-promises": false,
    "no-for-in-array": true,
    "no-implicit-dependencies": [true, ["src", "app", "@angular", "primeng", "@ngxs", "rxjs", "lodash", "deepcopy", "rxjs-spy"]],
    "no-inferred-empty-object-type": false,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-null-keyword": true,
    "no-object-literal-type-assertion": [true, { "allow-arguments": true }],
    "no-restricted-globals": [true, "name", "length", "event"],
    "no-return-await": true,
    "no-sparse-arrays": true,
    "no-this-assignment": true,
    "no-dangerous-any": true,
    "no-unsafe-finally": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "prefer-object-spread": true,
    "restrict-plus-operands": true,
    "strict-boolean-expressions": true,
    "strict-type-predicates": true,
    "switch-default": true,
    "typeof-compare": true,
    "unnecessary-constructor": true,
    "use-default-type-parameter": false,
    "use-isnan": true
  }
}
